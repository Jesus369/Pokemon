<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="/public/ShowUser/styles.css">
  </head>
  <body>

    <div class="header" id="header">
      <ul class="logo_items">
          <li id="logo_name"><span class="side_one">Poke</span><span class="side_two">DBase</span></li>
          <li id="logo_img"><img src="/public/pokeball.png"/></li>
      </ul>

      <div class="active_user">
        <ul id="user_accnts" class="user_accnts">
          <li id="username">
            <span id="username_span">
              {{#username}}{{.}}{{/username}}
            </span>
          </li>
          <li>
            {{#userId}}
              <a href="/home/{{.}}">Account</a>
            {{/userId}}
          </li>
        </ul>
      </div>
    </div>


    <div class="trainer_page_body">
      {{#user}}
      <img class="trainer_image" src="/{{image}}"/>
      <div>
        <ul>
          <li>Name: {{firstname}}</li>
          <li>Hometown: {{hometown}}</li>
          <li>Bio:</li> 
          <li>{{bio}}</li>
          <li>Age: {{age}}</li>
        </ul>
      </div>
      <a href="/home/{{id}}/trainers-six">View Team</a>
      <ul>
      {{#pokemons}}
        <li><img src="/{{image}}"/></li>
      {{/pokemons}}
      </ul>
      {{/user}}
    </div>
  </body>
  <script src="/public/script/jquery-3.2.1.min.js"></script>
  <script src="/public/script/script.js"></script>
</html>
