<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="/public/Register/styles.css">
  </head>
  <body>

    <div class="header" id="header">
      <ul class="logo_items">
          <li id="logo_name"><span class="side_one">Poke</span><span class="side_two">DBase</span></li>
          <li id="logo_img"><img src="/public/pokeball.png"/></li>
      </ul>

      <div class="active_user">
        <ul id="user_accnts" class="user_accnts">
          <li id="username">
            <span id="username_span">
              {{#username}}{{.}}{{/username}}
            </span>
          </li>
          <li>
            {{#userId}}
              <a href="/home/{{.}}">Account</a>
            {{/userId}}
          </li>
        </ul>
      </div>
    </div>


    <div class="register_major">
      <form class="register_form" action='/home/registeruser' method="POST">
        <input type='text' name="email" placeholder="Email" class="login_input">
        <input type='text' name="username" placeholder="Username">
        <input type='text' name="password" placeholder="Password">
        <input type='text' name="firstname" placeholder="First Name">
        <input type='text' name="lastname" placeholder="Last Name" >
        <button class="login_button">Register</button>
      </form>
    </div>

  </body>
  <script src="/public/script/jquery-3.2.1.min.js"></script>
  <script src="/public/script/script.js"></script>
</html>
